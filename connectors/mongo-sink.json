{
  "name": "mongo-sink",
  "config": {
    "connector.class": "com.mongodb.kafka.connect.MongoSinkConnector",
    "tasks.max": "1",
    "topics": "university_db.public.groups,university_db.public.departments",
    "connection.uri": "mongodb://admin:P@ssw0rd@mongodb:27017/?authSource=admin",
    "database": "university",

    "document.id.strategy": "com.mongodb.kafka.connect.sink.processor.id.strategy.PartialValueStrategy",
    "document.id.strategy.overrides": "university_db.public.groups=group_id;university_db.public.departments=dept_id",

    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false"
  }
}
